{% extends "IOCarteBundle::layout.html.twig" %}

{% block content -%}
    <div class="content-header">
        <h3>{{ category.name|raw }}</h3>
        <span class="actionbar">
            <a class="btn btn-danger" href="#"><i class="fa fa-trash-o"></i> </a>
        </span>
        <div class="clearfix"></div>
    </div>

    {{ form_start(form) }}
        <div class="col-md-6">
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.parent) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.file) }}
                
            <div>
                <label>Image actuelle</label>
                {% if category.media %}
                    <img title="Miniature {{ category.name }}" class="img-rounded" src="{{ category.media.thumbnailPath|imageLink }}" alt="Image" />
                {% else %}
                    <em>Aucune image disponible</em>
                {% endif %}
            </div>

        </div>
        <div class="clearfix"></div>
        
        <div class="col-md-12">
            {{ form_rest(form) }}
        </div>
        <div class="clearfix"></div>
    {{ form_end(form) }}

</ul>
{% endblock %}
