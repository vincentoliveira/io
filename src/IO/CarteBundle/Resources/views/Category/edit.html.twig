{% extends "IOCarteBundle::layout.html.twig" %}

{% block content -%}
    <h3>
        <small><a href="{{ path('category_show', {id:category.id}) }}" title="Retour Ã  la carte"><span class="glyphicon glyphicon-arrow-left"></span></a></small>
        {{ category.name|raw }}
    </h3>

    {{ form_start(form) }}
        <div class="col-md-6">
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.parent) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.file) }}
                
            <div>
                <label>Image actuelle</label>
                {% if category.media %}
                    <img title="Miniature {{ category.name }}" class="img-rounded" src="{{ category.media.thumbnailPath|imageLink }}" alt="Image" />
                {% else %}
                    <em>Aucune image disponible</em>
                {% endif %}
            </div>

        </div>
        <div class="clearfix"></div>
        {{ form_rest(form) }}
    {{ form_end(form) }}

</ul>
{% endblock %}
