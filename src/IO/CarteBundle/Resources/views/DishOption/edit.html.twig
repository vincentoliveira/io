{% extends "IOCarteBundle::layout.html.twig" %}

{% block content %}
    <div class="content-header">
        <h3>{{ entity.name }}</h3>
        <div class="clearfix"></div>
    </div>

    {{ form_start(edit_form) }}
        <div class="col-md-12">
            <div class="form-group">
                {{ form_row(edit_form.name) }}
            </div>
            <div class="form-group">
                {{ form_row(edit_form.options) }}
            </div>
        <div>
            
        <div class="clearfix"></div>
        <div class="col-md-12">
            {{ form_rest(edit_form) }}
        </div>
    {{ form_start(edit_form) }}
{% endblock %}
