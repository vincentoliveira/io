{% extends "IOCarteBundle::layout.html.twig" %}

{% block content %}
    <div class="content-header">
        <h3>Ajouter une option</h3>
        <div class="clearfix"></div>
    </div>

    {{ form_start(form) }}
        <div class="col-md-12">
            <div class="form-group">
                {{ form_row(form.name) }}
            </div>
            <div class="form-group">
                {{ form_row(form.options) }}
            </div>
        <div>
            
        <div class="clearfix"></div>
        <div class="col-md-12">
            {{ form_rest(form) }}
        </div>
    {{ form_start(form) }}
{% endblock %}
