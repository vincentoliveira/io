{% extends "IOCarteBundle::layout.html.twig" %}

{% block content %}

    <h3>
        <small><a href="{{ path('category_show', {id:dish.category.id}) }}" title="Retour Ã  la carte"><span class="glyphicon glyphicon-arrow-left"></span></a></small>
        {{ dish.name|raw }}
        <span class="delete-form">{{ form(delete_form) }}</span>
    </h3>

    {{ form_start(form) }}
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.name) }}
            </div>
            <div class="form-group">
                {{ form_row(form.price) }}
            </div>
            <div class="form-group">
                {{ form_row(form.description) }}
            </div>
            <div class="form-group">
                {{ form_row(form.category) }}
            </div>
        </div>
        <div class="col-md-6">
            {{ form_row(form.file) }}
                
            <div>
                <label>Image actuelle</label>
                {% if dish.media %}
                    <img title="Miniature {{ dish.name }}" class="img-rounded" src="{{ dish.media.thumbnailPath|imageLink }}" alt="Image" />
                {% else %}
                    <em>Aucune image disponible</em>
                {% endif %}
            </div>

        </div>
        <div class="clearfix"></div>
        {{ form_rest(form) }}
    {{ form_end(form) }}

{% endblock %}