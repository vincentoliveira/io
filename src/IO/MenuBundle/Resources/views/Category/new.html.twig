{% extends "IOMenuBundle::layout.html.twig" %}

{% block content %}
    <h3>
        <small><a href="{{ path('carte') }}" title="Retour à la carte"><span class="glyphicon glyphicon-arrow-left"></span></a></small>
        Ajouter une catégorie
    </h3>

    <form class="menu-form" action="{{ path('category_create') }}" method="POST" {{ form_enctype(form) }}>
        <div class="col-md-6">
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.parent) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.file) }}
        </div>
        <div class="clearfix"></div>
        {{ form_rest(form) }}
    </form>

{% endblock %}
