{% extends "IOMenuBundle::layout.html.twig" %}

{% block content %}
    <h3>{{ category.name|raw }}</h3>
    <div class="dishes list-group">
        {% for dish in dishes %}
            <div class="dish dishlist-group-item">                
                <a href="{{ path('menu_commande_dish_edit', {id:dish.id}) }}" class="btn btn-primary" role="button">Edit</a>
                <img class="img-rounded" src="{{ dish.imageUrl }}" alt="#" />
                <strong>{{ dish.name }}</strong>
                <em>{{ dish.price }}</em>
                <span>{{ dish.description|raw }}</span>
            </div>
        {% endfor %}
        </ul>
    </div>
{% endblock %}
