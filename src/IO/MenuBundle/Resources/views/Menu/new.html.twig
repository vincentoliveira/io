{% extends "IOMenuBundle::layout.html.twig" %}

{% block content %}
<h3>
    <small><a href="{{ path('carte') }}" title="Retour à la carte"><span class="glyphicon glyphicon-arrow-left"></span></a></small>
    Créer un menu
</h3>
<form class="edit-form" role="form" action="{{ path('menu_create') }}" method="POST">
    <div class="form-group">
        {{ form_row(form.name) }}
    </div>
    <div class="form-group">
        {{ form_row(form.description) }}
    </div>
    <div class="form-group">
        {{ form_row(form.price) }}
    </div>
    {{ form_rest(form) }}
    <button class="btn btn-success" type="submit">Créer un menu</button>
</form>
{% endblock %}