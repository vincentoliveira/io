{% extends "IOMenuBundle::layout.html.twig" %}

{% block content %}

<h3>
    <small><a href="{{ path('category_show', {id:dish.category.id}) }}" title="Retour Ã  la carte"><span class="glyphicon glyphicon-arrow-left"></span></a></small>
    {{ dish.name|raw }}
    <span class="delete-form">{{ form(delete_form) }}</span>
</h3>

<form class="edit-form" role="form" action="{{ path('dish_update', {id:dish.id}) }}" method="POST">
    <div class="form-group">
        {{ form_row(form.name) }}
    </div>
    <div class="form-group">
        {{ form_row(form.description) }}
    </div>
    <div class="form-group">
        {{ form_row(form.price) }}
    </div>
    {{ form_rest(form) }}
    <button class="btn btn-success" type="submit">Modifier</button>
</form>

{% endblock %}