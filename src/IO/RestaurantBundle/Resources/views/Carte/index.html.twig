<!DOCTYPE html>
<html>
    <head>
        <title>{{ restaurant.name }}</title>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta property="og:title" content="{{ restaurant.name }} - Menu du jour" />
        <meta property="og:site_name" content="InnovOrder - {{ restaurant.name }}" />
        <meta property="og:type" content="article">
        <meta property="og:description" content="Découvre la carte de {{ restaurant.name }} grâce à InnovOrder" />
        <meta property="og:url" content="{{ url('carte_index', {name:restaurant.name}) }}" />
        {% if restaurant.group.visualIdentity and restaurant.group.visualIdentity.background %}
        <meta property="og:image" content="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset(restaurant.group.visualIdentity.background|media) }}" />
        {% endif %}
        
        {% stylesheets 
            'bundles/iodefault/css/bootstrap.min.css'
            'bundles/iodefault/css/font-awesome.min.css'
            'bundles/iodefault/css/restaurant.css'
            filter='yui_css,cssrewrite' 
            output='css/restaurant.css' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        <link rel="icon" type="image/x-icon" ref="{{ asset('favicon.ico') }}">
    </head>
    <body>
        <div class="mainContainer">
            <h1>
                <a href="{{ restaurant.group.website|default("#") }}">
                {% if restaurant.group.visualIdentity and restaurant.group.visualIdentity.logo is not null %}
                    <img src="{{ asset(restaurant.group.visualIdentity.logo|media) }}" alt="{{ restaurant.name }}"/>
                {% else %}
                    {{ restaurant.name }}
                {% endif %}
                </a>
            </h1>
            
            
            <div class="fb-share-button" data-href="{{ path('carte_index', {name:restaurant.name}) }}" data-type="button"></div>
            <div class="twitter-button">
                <a href="https://twitter.com/share?text=Découvrer%20la%20carte%20du%20jour%20du%20NUMA%20Cafe%20grâce%20à%20@InnovOrder" data-url="http://app.innovorder.fr/carte/restaurant/Café%20NUMA" class="twitter-share-button" data-lang="fr" data-count="none">Tweet</a>
            </div>
                        
            <p class="message">Bienvenue sur la carte de "{{ restaurant.name }}"</p>

            <div class="menu">
            {% for item in carte %}
                <div class="category">
                    <h3>{{ item.name|upper }}</h3>
                    {% for product in item.products %}
                    <div class="product">
                        {% if product.media is defined %}
                        <img class="img-rounded" src="{{ asset(product.media.path|mediaWebPath) }}" alt="" />
                        <strong>{{ product.name }}</strong>
                        {% else %}
                        <img class="img-rounded" src="{{ asset('bundles/iodefault/img/no_image_available.png') }}" alt="" />
                        {% endif %}
                        <em>{{ product.price|number_format(2, '.', ',') }}€</em>
                        <p>
                            {{ product.description|default("")|nl2br }}
                        </p>
                    </div>
                    {% endfor %}
                    <div class="clearfix"></div>
                </div>
            {% endfor %}
            </div>
                
            <div class="clearfix"></div>
            
            <div class="footer">
                Carte générée par <a href="http://innovorder.fr">InnovOrder</a>
            </div>
        </div>
        
        {% javascripts 
            '@IODefaultBundle/Resources/public/js/jquery.js'
            '@IODefaultBundle/Resources/public/js/bootstrap.min.js'
            filter='yui_js'
            output='js/base.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <div id="fb-root"></div>
        <script>(function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&appId=489218227845976&version=v2.0";
          fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
    </body>
</html>
