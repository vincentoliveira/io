{% extends "IODefaultBundle::layout.html.twig" %}

{% block content %}
<div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
        {% include 'IOOrderBundle:Dashboard:_left_menu.html.twig' %}
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header">Tableau de bord ({{ null|date('d/m/Y') }})</h1>

        <div class="row">
            {% for tile in tiles %}
            <div class="col-md-3 col-sm-6">
                <div class="dashboard-tile">
                    <h1 class="text-left">{{ tile.value }}</h1>
                    <p>{{ tile.title }}</p>
                </div>
            </div>
            {% endfor %}
            <div class="clearfix"></div>
        </div>
    </div>
</div>
{% endblock %}
