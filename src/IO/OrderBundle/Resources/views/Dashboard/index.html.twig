{% extends "IODefaultBundle::layout.html.twig" %}

{% block content %}

<div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
        <ul class="nav nav-sidebar">
            <li class="active"><a href="#">Tableau de bord</a></li>
        </ul>
        <h4>Historique</h4>
        <ul class="nav nav-sidebar">
            <li><a href="{{ path('history_index') }}">Commandes</a></li>
            <li><a href="{{ path('history_payment') }}">Paiements</a></li>
        </ul>
        <h4>Statistiques</h4>
        <ul class="nav nav-sidebar">
            <li><a href="{{ path('stats_item_distribution') }}">Répartitions (Plats)</a></li>
            <li><a href="{{ path('stats_time_distribution') }}">Répartitions (Temps)</a></li>
            <li><a href="{{ path('stats_payment_distribution') }}">Répartitions (Mode de paiment)</a></li>
        </ul>
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header">Tableau de bord ({{ day|date('d/m/Y') }})</h1>

        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="dashboard-tile detail tile-red">
                    <div class="content">
                        <h1 class="text-left">{{ dayCount }}</h1>
                        <p>Commandes</p>
                    </div>
                    <div class="icon"><i class="fa fa-cutlery"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="dashboard-tile detail tile-turquoise">
                    <div class="content">
                        <h1 class="text-left">{{ dayTotal }}</h1>
                        <p>Chiffre d'affaire</p>
                    </div>
                    <div class="icon"><i class="fa fa-euro"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="dashboard-tile detail tile-blue">
                    <div class="content">
                        <h1 class="text-left">{{ avgOrderTime }}</h1>
                        <p>Temps (commande)</p>
                    </div>
                    <div class="icon"><i class="fa fa-clock-o"></i>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>
        </div>
    </div>
</div>

{% endblock %}
