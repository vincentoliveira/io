{% extends "IODefaultBundle::layout.html.twig" %}

{% block content %}
<div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
        {% include 'IOOrderBundle:Dashboard:_left_menu.html.twig' %}
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header">Historique des paiements</h1>
        <div class="history">
            <table class="table table-hover table-bordered">
                <tr>
                    <th>ID</th>
                    <th>Transaction ID</th>
                    <th>Montant</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Commentaires</th>
                </tr>
        {% for payment in payments %}
                <tr>
                    <td>{{ payment.id }}</td>
                    <td>{{ payment.transactionId }}</td>
                    <td>{{ payment.amount }}</td>
                    <td>{{ payment.type }}</td>
                    <td>{{ payment.status|trans }}</td>
                    <td>{{ payment.comments|base64_decode }}</td>
                </tr>
        {% endfor %}
            </table>
        </div>
    </div>
</div>
{% endblock %}
